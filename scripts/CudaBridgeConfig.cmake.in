@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/CudaBridgeTargets.cmake" OPTIONAL)

# Find CudaBridge library
find_library(CUDABRIDGE_LIBRARY
    NAMES cudabridge
    PATHS "${CMAKE_CURRENT_LIST_DIR}/../../../lib"
)

find_path(CUDABRIDGE_INCLUDE_DIR
    NAMES cudabridge.h
    PATHS "${CMAKE_CURRENT_LIST_DIR}/../../../include"
)

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(CudaBridge
    REQUIRED_VARS CUDABRIDGE_LIBRARY CUDABRIDGE_INCLUDE_DIR
)

if(CudaBridge_FOUND AND NOT TARGET CudaBridge::cudabridge)
    add_library(CudaBridge::cudabridge UNKNOWN IMPORTED)
    set_target_properties(CudaBridge::cudabridge PROPERTIES
        IMPORTED_LOCATION "${CUDABRIDGE_LIBRARY}"
        INTERFACE_INCLUDE_DIRECTORIES "${CUDABRIDGE_INCLUDE_DIR}"
    )
endif()

set(CUDABRIDGE_LIBRARIES ${CUDABRIDGE_LIBRARY})
set(CUDABRIDGE_INCLUDE_DIRS ${CUDABRIDGE_INCLUDE_DIR})
